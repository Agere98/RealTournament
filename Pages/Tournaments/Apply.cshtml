@page
@model RealTournament.Pages.Tournaments.ApplyModel
@{
    ViewData["Title"] = "Apply";
}

<h1>@Model.Tournament.Name - Apply</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TournamentId" />
            <div class="form-group">
                <label asp-for="LicenseNumber" class="control-label"></label>
                <input asp-for="LicenseNumber" class="form-control" />
                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentRanking" class="control-label"></label>
                <input asp-for="CurrentRanking" class="form-control" />
                <span asp-validation-for="CurrentRanking" class="text-danger"></span>
            </div>
            @if (ViewBag.errMsg != null)
            {
                <div class="form-group">
                    <span class="text-danger">@ViewBag.errMsg</span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Apply" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
